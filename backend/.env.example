# AutoCare Pro Backend Environment Variables
# Copy this file to .env and update the values

# Server Configuration
PORT=3001
NODE_ENV=development
API_VERSION=v1

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/autocare-pro
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/autocare-pro

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# Admin Configuration
ADMIN_PASSWORD=autocarpro12k@12k.wwc

# CORS Configuration
FRONTEND_URL=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads

# WebSocket Configuration
SOCKET_CORS_ORIGIN=http://localhost:5173

# Email Configuration (for future use)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# GPS Configuration
DEFAULT_LAT=-1.2921
DEFAULT_LNG=36.8219
GPS_UPDATE_INTERVAL=30000